{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ESNext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "paths": {
      "@designer/*": [
        "./modules/designer/packages/*/src"
      ],
      "@material/*": [
        "./modules/material/packages/*/src"
      ],
      "@renderer/*": [
        "./modules/renderer/packages/*/src"
      ]
    }
  }
}